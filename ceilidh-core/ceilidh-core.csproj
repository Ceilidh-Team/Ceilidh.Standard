<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <RootNamespace>Ceilidh.Core</RootNamespace>
    <StartupObject>Ceilidh.Core.Ceilidh</StartupObject>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GenerateAssemblyTitleAttribute>false</GenerateAssemblyTitleAttribute>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <Deterministic>false</Deterministic>
    <Authors>Ceilidh</Authors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  <Choose>
    <When Condition="'$(RuntimeIdentifier)' == 'win-x86' or '$(RuntimeIdentifier)' == 'win-x64'">
      <PropertyGroup>
        <OS>Windows_NT</OS>
      </PropertyGroup>
      <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'win-x86'">
        <Platform>x86</Platform>
      </PropertyGroup>
      <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'win-x64'">
        <Platform>x64</Platform>
      </PropertyGroup>
    </When>
    <When Condition="'$(RuntimeIdentifier)' == 'linux-x64' or '$(RuntimeIdentifier)' == 'osx-x64'">
      <PropertyGroup>
        <OS>Unix</OS>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <Platform>AnyCPU</Platform>
      </PropertyGroup>
    </Otherwise>
  </Choose>
  <PropertyGroup >
    <OS>Windows_NT</OS>
  </PropertyGroup>
  <Target Name="BeforePublish">
    <Choose>
    </Choose>
  </Target>
  <Choose>
    <When Condition="'$(Configuration)' == 'Debug'">
      <PropertyGroup>
        <DefineDebug />
        <DefineTrace />
      </PropertyGroup>
    </When>
    <When Condition="'$(Configuration)' == 'Release'">
    </When>
  </Choose>
  <Choose>
    <When Condition="'$(OS)' == 'Windows_NT'">
      <PropertyGroup>
        <DefineConstants>WIN32;$(DefineConstants)</DefineConstants>
      </PropertyGroup>
      <ItemGroup>
        <None Update="avcodec-58.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="avdevice-58.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="avfilter-7.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="avformat-58.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="avutil-56.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="postproc-55.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="swresample-3.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="swscale-5.dll">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
      </ItemGroup>
    </When>
    <When Condition="'$(OS)' == 'Unix'">
      <PropertyGroup>
        <DefineConstants>UNIX;$(DefineConstants)</DefineConstants>
        <Platform>x64</Platform>
      </PropertyGroup>
    </When>
  </Choose>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.3.0" />
    <PackageReference Include="System.Reflection.Emit" Version="4.3.0" />
  </ItemGroup>
</Project>